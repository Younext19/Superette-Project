<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/foodbg2"
    tools:context=".details.AdditiveFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/Id_Ingredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingredient"
        android:textColor="#000"
        android:background="@drawable/data"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/Id_Alcool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Id_Ingredient"
        android:background="@drawable/data"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Alcool"
        android:textColor="#000"
        android:textSize="25sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/Id_Toxic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Id_Alcool"
        android:background="@drawable/data"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Toxic"
        android:textColor="#000"
        android:textSize="25sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/Id_Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Id_Toxic"
        android:background="@drawable/data"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Status"
        android:textColor="#000"
        android:textSize="25sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/Id_Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Id_Status"
        android:text="Description"
        android:background="@drawable/data"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="#000"
        android:textSize="25sp"
        android:textStyle="bold"/>



    intent.putExtra("Ingredient",ingredient);
    intent.putExtra("Alcool",alcool);
    intent.putExtra("Toxic",toxic);
    intent.putExtra("Status",status);
    intent.putExtra("Desciription",description);

</RelativeLayout>